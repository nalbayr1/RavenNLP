// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  password  String
  favorites Favorite[] // Relation to the Favorite model
}

model Player {
  id          Int        @id @default(autoincrement())
  name        String
  photo       String?    // Store the image URL
  playerInfo  String?
  height      String?    // New field for Height
  age         String?    // New field for Age
  weight      String?    // New field for Weight
  position    String?    // New field for Position
  createdAt   DateTime   @default(now())
  favoritedBy Favorite[] // Relation to the Favorite model
}
  
model Prospect { 
  id         Int      @id @default(autoincrement())
  name       String
  photo      String?  // Store the image URL
  playerInfo String?
  height     String?  // New field for Height
  age        String?  // New field for Age
  weight     String?  // New field for Weight
  position   String?  // New field for Position
  createdAt  DateTime @default(now())
}

model Prospect {
  id         Int      @id @default(autoincrement())
  name       String
  height     String?  // New field for Height
  weight     String?  // New field for Weight
  position   String?  // New field for Position
  experience String?  // New field for Experience
  school     String?  // New field for School
  createdAt  DateTime @default(now())
}



model Team {
  id    Int     @id @default(autoincrement())
  name  String  @unique
}

model Favorite {
  userId   Int
  playerId Int
  user     User   @relation(fields: [userId], references: [id])
  player   Player @relation(fields: [playerId], references: [id])

  @@id([userId, playerId])
}
