generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  password  String
}

model Player {
  id         Int      @id @default(autoincrement())
  name       String
  photo      String?  // Store the image URL
  playerInfo String?
  height     String?  // New field for Height
  age        String?  // New field for Age
  weight     String?  // New field for Weight
  position   String?  // New field for Position
  createdAt  DateTime @default(now())
}

model Prospect {
  id         Int      @id @default(autoincrement())
  name       String
  height     String?  // New field for Height
  weight     String?  // New field for Weight
  position   String?  // New field for Position
  experience String?  // New field for Experience
  school     String?  // New field for School
  createdAt  DateTime @default(now())
}



model Team {
  id    Int     @id @default(autoincrement())
  name  String  @unique
}
